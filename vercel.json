{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/submit-letter",
      "dest": "api/submit-letter.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/get-letters",
      "dest": "api/get-letters.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "api/health.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "mongodb+srv://unthanks:unthanks2025@cluster0.rlrvo4o.mongodb.net/unthanks-db?retryWrites=true&w=majority",
    "MONGODB_DB_NAME": "unthanks-db"
  }
}