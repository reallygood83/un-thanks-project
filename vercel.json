      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/createSurvey",
      "dest": "api/createSurvey.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/getSurvey/(?<id>[^/]+)",
      "dest": "api/getSurvey.js?id=$id",
      "methods": ["GET", "OPTIONS"]
