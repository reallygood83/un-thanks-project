{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/simple-test",
      "dest": "api/simple-test.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/health-check",
      "dest": "api/health-check.js",
      "methods": ["GET", "OPTIONS"]
