{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build && cp -r dist/* ..",
  "outputDirectory": ".",
  "functions": {
    "api/submit-letter.js": {
      "memory": 512,
      "maxDuration": 10
    },
    "api/get-letters.js": {
      "memory": 512,
      "maxDuration": 10
    },
    "api/health.js": {
      "memory": 128,
      "maxDuration": 5
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-uri",
    "MONGODB_DB_NAME": "unthanks-db"
  }
}