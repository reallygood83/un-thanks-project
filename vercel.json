{
  "version": 2,
  "framework": null,
  "outputDirectory": ".",
  "buildCommand": "cd frontend && npm install && npm run build && cp -r dist/* ..",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    {
      "src": "/api/submit-letter",
      "dest": "api/submit-letter.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/get-letters", 
      "dest": "api/get-letters.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "api/health.js", 
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "status": 404
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "mongodb+srv://unthanks:unthanks2025@cluster0.rlrvo4o.mongodb.net/unthanks-db?retryWrites=true&w=majority",
    "MONGODB_DB_NAME": "unthanks-db"
  }
}