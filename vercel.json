{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/api/letters-test",
      "dest": "/api/letters-test.js"
    },
    {
      "src": "/api",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/debug-mongodb",
      "dest": "/api/debug-mongodb.js"
    },
    {
      "src": "/api/letters",
      "dest": "/api/letters/index.js"
    },
    {
      "src": "/api/letters/(.*)",
      "dest": "/api/letters/[id].js?id=$1"
    },
    {
      "src": "/api/countries",
      "dest": "/api/countries/index.js"
    },
    {
      "src": "/api/countries/(.*)",
      "dest": "/api/countries/[id].js?id=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}