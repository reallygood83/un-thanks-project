{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/_lib/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/letters/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/getLetters",
      "dest": "/api/getLetters.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/submitLetter",
      "dest": "/api/submitLetter.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/translatePreview",
      "dest": "/api/index.js?action=translatePreview",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api",
      "dest": "/api/index.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}