{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/submitLetter",
      "dest": "api/submitLetter.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/getLetters",
      "dest": "api/getLetters.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/getLetter/(?<id>[^/]+)",
      "dest": "api/getLetter.js?id=$id",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/direct-submit",
      "dest": "api/direct-submit.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/test-api",
      "dest": "api/test-api.js",
      "methods": ["GET", "POST", "OPTIONS", "PUT", "DELETE"]
    },
    {
      "src": "/api/health",
      "dest": "api/health.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/debug-mongo",
      "dest": "api/debug-mongo.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "mongodb+srv://unthanks:unthanks2025@cluster0.rlrvo4o.mongodb.net/unthanks-db?retryWrites=true&w=majority",
    "MONGODB_DB_NAME": "unthanks-db"
  }
}