{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/_lib/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/letters/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With"
      }
    },
    {
      "src": "/api/submitLetter",
      "dest": "api/submitLetter.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/getLetters",
      "dest": "api/getLetters.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "api/health.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/letters/(.*)",
      "dest": "api/letters/$1.js"
    },
    {
      "src": "/api",
      "dest": "api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}